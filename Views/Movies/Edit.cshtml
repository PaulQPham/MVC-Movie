@model MvcMovie.Models.MovieCastViewModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Movie</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="movie.ID" />
            <div class="form-group">
                <label asp-for="movie.Title" class="control-label"></label>
                <input asp-for="movie.Title" class="form-control" />
                <span asp-validation-for="movie.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="movie.ReleaseDate" class="control-label"></label>
                <input asp-for="movie.ReleaseDate" class="form-control" />
                <span asp-validation-for="movie.ReleaseDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="movie.Genre" class="control-label"></label>
                <input asp-for="movie.Genre" class="form-control" />
                <span asp-validation-for="movie.Genre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="movie.Price" class="control-label"></label>
                <input asp-for="movie.Price" class="form-control" />
                <span asp-validation-for="movie.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="movie.Rating" class="control-label"></label>
                <input asp-for="movie.Rating" class="form-control" />
                <span asp-validation-for="movie.Rating" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="movie.Image" class="control-label"></label>
                <input asp-for="movie.Image" class="form-control" />
                <span asp-validation-for="movie.Image" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
<h2>Cast of @Model.movie.Title</h2>
<form id="myForm"></form>
<table class="table">
    <thead>
        <tr>
            <th>Actor</th>
            <th>Character</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.roles)
        {
            <tr>
                <td>
                    @Html.ActionLink(item.Actor, "Details", "Actors", new { actorName = item.Actor })
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Character)
                </td>
                <td>
                    @Html.ActionLink("Delete", "Delete", "MovieRoles", new { actorName = item.Actor, movieTitle = item.Movie})
                    
                </td>
            </tr>
        }
        <tr id="btn-row">
            <td>
                <button type="button" class="btn btn-default" id="addRole">Add</button>
            </td>
            <td></td>
            <td></td>
        </tr>
        <tr id="addRow">
            <td>
                <select asp-for="newActor" asp-items="Model.actors" class="form-control" form="myForm" id="newActor"></select>
            </td>
            <td>
                <div class="form-group">
                    <input asp-for="newRole" name="newRole" class="form-control" id="newRole" form="myForm" />
                    <span asp-validation-for="newRole" class="text-danger" form="myForm"></span>
                </div>
            </td>
            <td>
                <input type="reset" value="Save" class="btn btn-default" id="save" form="myForm" />
                <input type="reset" value="Cancel" class="btn btn-default" id="cancel" form="myForm" />
            </td>
        </tr>
    </tbody>
</table>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
            $('#addRow').hide();
    </script>
    <script>
        $('#addRole').on('click', () => {
            $('#addRow').toggle();
            $('#btn-row').hide();
            $('#newRole').data('validator', null);
            $.validator.unobtrusive.parse($('#newRole'));
        });
    </script>
    <script>
        $('#cancel').on('click', () => {
            $('#addRow').toggle();
            $('#btn-row').toggle();
        });
    </script>
    <script>
        $('#save').click(function () {
            $.ajax({
                type: 'POST',
                dataType: 'Json',
                url: '@Url.Action("Create", "MovieRoles")',
                data: {
                    newRole: $('#newRole').val(),
                    newActor: $('#newActor').val(),
                    newMovie: '@Model.movie.Title'
                },
                success: function (response) {
                    alert("Success: New role added!");
                    location.reload();
                },
                error: function (response) {
                    alert('error');
                }
            })
        });
    </script>
}
